@import "../../stylesheets/__vendor.styl"
@import "../../stylesheets/__constants.styl"

padding = 12px
[data-tuktuk="modal"]
  position: fixed
  top: 0
  left: 50%
  width: w = 400px
  margin-left: -(w / 2)
  padding: padding

  background: #f5f5f5
  border-radius 0 0 1px 1px
  box-shadow 0 1px 4px #000

  transition all 300ms 100ms
  transform translateY(-100%)
  opacity: 0
  z-index: 1981
  &.active
    transform translateY(0%)
    opacity: 1

  &.small
    width: w = 320px
    margin-left: -(w / 2)

  &.big
    width: w = 540px
    margin-left: -(w / 2)

  & > hr
    border: solid 1px #ccc

@media only screen and (max-width: 540px)
  [data-tuktuk="modal"]
    left: 5% !important
    width: w = 90% !important
    margin-left: 0px !important

[data-tuktuk="lock"]
  width: 100%
  height: 100%
  position: fixed
  top: 0
  bottom: 0
  left: 0
  background: rgba(0,0,0,0.75)
  z-index: 1980
  visibility: hidden
  opacity: 0
  transition all 300ms 100ms
  &.active
    visibility: visible
    opacity: 1
